<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local ="clr-namespace:Silent.UI"
        xmlns:controls="clr-namespace:Silent.UI.Controls"
        mc:Ignorable="d" 
        d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="Silent.UI.MainWindow"
        Title="Silent Editor">
    <Grid RowDefinitions="Auto,*">
		<Menu Grid.Row="0">
			<MenuItem Header="_File">
				<MenuItem Header="_Open..." Click="OnOpenClick"/>
				<MenuItem Header="_Save"    Click="OnSaveClick"/>
				<MenuItem Header="Save _As..." Click="OnSaveAsClick"/>
				<Separator/>
				<MenuItem Header="E_xit" Click="OnExitClick"/>
			</MenuItem>
		</Menu>

        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto">
            <controls:EditorView Margin="8" x:Name="Editor"/>
        </ScrollViewer>
    </Grid>
</Window>
